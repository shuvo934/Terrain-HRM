                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:clickable="false"
                                android:enabled="false"
                                android:textSize="@dimen/_8sdp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:inputType="textMultiLine" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:hint="Structure Designation:"
                            android:layout_weight=".5"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            app:boxStrokeColor="#f0932b"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="1dp"
                            app:boxCornerRadiusTopStart="@dimen/_4sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_4sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_4sdp"
                            app:boxBackgroundMode="filled"
                            android:clickable="false"
                            android:enabled="false"
                            app:boxBackgroundColor="@color/white"
                            app:hintTextColor="@color/black"
                            tools:ignore="HardcodedText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/str_des_advance"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:clickable="false"
                                android:enabled="false"
                                android:textSize="@dimen/_8sdp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:inputType="textMultiLine" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:hint="Job Position:"
                            android:layout_weight=".5"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_4sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            app:boxStrokeColor="#f0932b"
                            app:boxStrokeWidth="0dp"
                            app:boxStrokeWidthFocused="1dp"
                            app:boxCornerRadiusTopStart="@dimen/_4sdp"
                            app:boxCornerRadiusTopEnd="@dimen/_4sdp"
                            app:boxCornerRadiusBottomEnd="@dimen/_4sdp"
                            app:boxCornerRadiusBottomStart="@dimen/_4sdp"
                            app:boxBackgroundMode="filled"
                            android:clickable="false"
                            android:enabled="false"
                            app:boxBackgroundColor="@color/white"
                            app:hintTextColor="@color/black"
                            tools:ignore="HardcodedText">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/job_pos_advance"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:ems="10"
                                android:clickable="false"
                                android:enabled="false"
                                android:textSize="@dimen/_8sdp"
                                android:fontFamily="@font/poppins_semibold"
                                android:text=""
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:inputType="textMultiLine" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:text="- - - - - - - - - - - -"
                        android:layout_marginStart="@dimen/_34sdp"
                        android:layout_marginEnd="@dimen/_34sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_6sdp"
                        android:fontFamily="@font/poppins_bold"
                        tools:ignore="HardcodedText" />



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:padding="@dimen/_2sdp"
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_semibold"
                            android:gravity="center"
                            android:background="#ced6e0"
                            android:textColor="@color/black"
                            android:layout_weight=".6"
                            android:text="ADVANCE"
                            tools:ignore="HardcodedText" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:textSize="@dimen/_10sdp"
                            android:fontFamily="@font/poppins_semibold"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:background="#ced6e0"
                            android:gravity="center"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/black"
                            android:layout_weight=".4"
                            android:text="AMOUNT"
                            tools:ignore="HardcodedText" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:padding="@dimen/_2sdp"
                            android:textSize="@dimen/_8sdp"
                            android:fontFamily="@font/poppins"
                            android:gravity=""
                            android:textColor="@color/black"
                            android:layout_weight=".6"
                            android:text="Advance(One Time) Taken"
                            tools:ignore="HardcodedText" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <TextView
                            android:id="@+id/advance_taken"
                            android:layout_width="0dp"
                            android:textSize="@dimen/_8sdp"
                            android:fontFamily="@font/poppins"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/black"
                            android:layout_weight=".4"
                            android:text=""/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:padding="@dimen/_2sdp"
                            android:textSize="@dimen/_8sdp"
                            android:fontFamily="@font/poppins"
                            android:gravity=""
                            android:textColor="@color/black"
                            android:layout_weight=".6"
                            android:text="Advance(One Time) Paid"
                            tools:ignore="HardcodedText" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <TextView
                            android:id="@+id/advance_paid"
                            android:layout_width="0dp"
                            android:textSize="@dimen/_8sdp"
                            android:fontFamily="@font/poppins"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/black"
                            android:layout_weight=".4"
                            android:text=""/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_2sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:background="@android:color/darker_gray"
                        android:orientation="vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:padding="@dimen/_2sdp"
                            android:textSize="@dimen/_8sdp"
                            android:fontFamily="@font/poppins"
                            android:gravity=""
                            android:textColor="@color/black"
                            android:layout_weight=".6"
                            android:text="Scheduling Advance Paid"
                            tools:ignore="HardcodedText" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/black" />

                        <TextView
                            android:id="@+id/schedule_advance_paid"
                            android:layout_width="0dp"
                            android:textSize="@dimen/_8sdp"
                            android:fontFamily="@font/poppins"
                            android:layout_height="match_parent"
                            android:textStyle="bold"
                            android:gravity="end"
                            android:padding="@dimen/_2sdp"
