                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_10sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_marginBottom="@dimen/_14sdp"
                                android:baselineAligned="false"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/in_time_text_attendance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_alignParentTop="true"
                                        android:fontFamily="@font/poppins_bold"
                                        android:text="IN TIME"
                                        android:textColor="@color/black"
                                        android:gravity="center"
                                        android:textSize="@dimen/_9sdp"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:layout_marginStart="@dimen/_4sdp"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        android:layout_marginBottom="@dimen/_4sdp"
                                        android:textStyle="bold"
                                        tools:ignore="HardcodedText" />

                                    <TextView
                                        android:id="@+id/in_time_attendance_attendance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_below="@+id/in_time_text_attendance"
                                        android:fontFamily="@font/poppins_bold"
                                        android:text=""
                                        android:textColor="@color/primaryColor"
                                        android:gravity="center"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_marginStart="@dimen/_4sdp"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:textStyle="bold"
                                        tools:ignore="HardcodedText" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1">

                                    <TextView
                                        android:id="@+id/out_time_text_attendance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_alignParentTop="true"
                                        android:fontFamily="@font/poppins_bold"
                                        android:text="OUT TIME"
                                        android:textColor="@color/black"
                                        android:gravity="center"
                                        android:textSize="@dimen/_9sdp"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:layout_marginStart="@dimen/_4sdp"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        android:layout_marginBottom="@dimen/_4sdp"
                                        android:textStyle="bold"
                                        tools:ignore="HardcodedText" />

                                    <TextView
                                        android:id="@+id/out_time_attendance_attendance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerHorizontal="true"
                                        android:layout_below="@+id/out_time_text_attendance"
                                        android:fontFamily="@font/poppins_bold"
                                        android:text=""
                                        android:textColor="@color/primaryColor"
                                        android:gravity="center"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_marginStart="@dimen/_4sdp"
                                        android:layout_marginEnd="@dimen/_4sdp"
                                        android:layout_marginBottom="@dimen/_10sdp"
                                        android:textStyle="bold"
                                        tools:ignore="HardcodedText" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
