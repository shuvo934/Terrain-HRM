<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color"
    android:orientation="vertical"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_216sdp"
        android:layout_marginBottom="@dimen/_8sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_184sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/design_2" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_176sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/design"
            android:layout_marginTop="0dp"
            >
            <TextView
                android:id="@+id/name_of_soft_login"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="center"
                android:fontFamily="@font/patua_one"
                android:layout_marginBottom="@dimen/_16sdp"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold"
                android:text=""/>
            <ImageView
                android:id="@+id/image_from_db"
                android:layout_width="100dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:background="@drawable/logo_ikgl"
                android:layout_marginBottom="20dp"
                android:layout_height="60dp"/>


        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            app:cardElevation="4dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="70dp"
            android:layout_marginBottom="@dimen/_3sdp"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_3sdp"
                app:cardCornerRadius="70dp"
                app:cardBackgroundColor="@color/mazarine_blue">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_8sdp"
                    android:background="@drawable/thrm_logo"
                    app:civ_border_width="4dp"
                    app:civ_border_color="#3463ab"/>
            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>
<!--        <androidx.cardview.widget.CardView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            app:cardCornerRadius="5dp"-->
<!--            android:layout_alignParentBottom="true"-->
<!--            android:layout_centerHorizontal="true"-->
<!--            android:elevation="4dp"-->
<!--            app:cardElevation="4dp"-->
<!--            app:cardBackgroundColor="@color/mazarine_blue">-->
<!--            <ImageView-->
<!--                android:id="@+id/imageView"-->
<!--                android:layout_margin="5dp"-->
<!--                android:layout_width="70dp"-->
<!--                android:layout_height="70dp"-->
<!--                android:layout_gravity="center"-->
<!--                android:background="@drawable/thrm_logo" />-->
<!--        </androidx.cardview.widget.CardView>-->
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_16sdp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/darker_gray">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/spinner_layout_database"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="1dp"
                            app:boxStrokeColor="@color/window_color"
                            app:boxStrokeWidth="1dp"
                            app:hintTextColor="#b2bec3"
                            app:boxCornerRadiusTopStart="10dp"
                            app:boxCornerRadiusTopEnd="10dp"
                            app:boxCornerRadiusBottomEnd="10dp"
                            app:boxCornerRadiusBottomStart="10dp"
                            android:textColorHint = "#b2bec3"
                            app:boxBackgroundColor="@color/white"
                            app:boxBackgroundMode="filled"
                            app:endIconMode="dropdown_menu"
                            android:hint="Database"
                            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                            >

                            <com.rosemaryapp.amazingspinner.AmazingSpinner
                                android:id="@+id/database_spinner"
                                style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                                android:layout_width="match_parent"
                                android:text=""
                                android:layout_height="wrap_content"
                                />
                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:elevation="30dp"
                        android:fontFamily="@font/bungee"
                        android:gravity="start"
                        android:padding="10dp"
                        android:shadowColor="@color/primaryColor"
                        android:shadowDx="2"
                        android:shadowDy="0"
                        android:shadowRadius="2"
                        android:text="LOGIN"
                        android:textColor="@color/mazarine_blue"
                        android:textSize="@dimen/_24sdp"
                        android:textStyle="bold" />

                </LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/user_name_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="User Name"
                    android:layout_margin="@dimen/_8sdp"
                    app:boxStrokeColor="#0984e3"
                    app:boxStrokeWidth="2dp"
                    app:hintTextColor="#b2bec3"
                    android:textColorHint = "#718093"
                    app:startIconDrawable="@drawable/account_circle_24"
                    app:startIconTint="#718093"
                    app:helperTextEnabled="true"
                    app:helperText=""
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/user_name_given"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:text=""
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="@color/black"
                        android:inputType="textEmailAddress"
                        />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password"
                    app:boxStrokeWidth="2dp"
                    android:layout_margin="@dimen/_8sdp"
                    app:boxStrokeColor="#0984e3"
                    app:hintTextColor="#b2bec3"
                    android:textColorHint = "#718093"
                    app:startIconDrawable="@drawable/lock_24"
                    app:startIconTint="#718093"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#7f8fa6"
                    app:helperTextEnabled="true"
                    app:helperText=""
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    app:hintTextAppearance="@style/TextInputLayoutHintText">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/password_given"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text=""
                        android:fontFamily="@font/poppins_semibold"
                        android:inputType="textPassword"
                        android:ems="10"

                        />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start">
                    <CheckBox
                        android:id="@+id/remember_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:checked="false"
                        android:layout_gravity="start"
                        android:text="Remember Me"
                        android:textColor="@color/primaryColor"
                        android:buttonTint="@color/secondaryColor"
                        android:fontFamily="@font/poppins"
                        android:gravity="center"
                        />
                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_8sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/email_pass_miss"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/_24sdp"
                    android:textColor="@android:color/holo_red_dark"
                    android:text="The User Name and Password did not match"/>

                <Button
                    android:id="@+id/login_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@drawable/custom_button"
                    android:text="LOGIN"
                    android:fontFamily="@font/russo_one"
                    android:textSize="@dimen/_15sdp"
                    app:backgroundTint="@null"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
