<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/search_by_emp_name_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search by Employee"
        app:boxStrokeWidth="2dp"
        android:layout_margin="5dp"
        app:boxStrokeColor="#0984e3"
        app:hintTextColor="#dfe6e9"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"

        app:helperTextEnabled="true"
        app:helperText=""
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/search_by_emp_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textStyle="bold"
            android:textColor="#636e72"
            android:inputType="text"

            />

    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:weightSum="1.6">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="11sp"
            android:text="Request Code"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="#dfe6e9"
            android:layout_weight=".4"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="11sp"
            android:text="Employee Name"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:background="#dfe6e9"
            android:layout_weight=".3"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:text="ID"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#dfe6e9"
            android:layout_weight=".3"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>

        <TextView
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="Application Date"
            android:textStyle="bold"
            android:textSize="11sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#dfe6e9"
            android:layout_weight=".3"/>
        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <TextView
            android:id="@+id/for_att_leave_approve"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:text="Update Date"
            android:textStyle="bold"
            android:textSize="11sp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#dfe6e9"
            android:layout_weight=".3"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/request_list_for_approve"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"

            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

    </LinearLayout>



</LinearLayout>