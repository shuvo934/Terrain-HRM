<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_16sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Request No:"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_11sdp"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:layout_marginStart="@dimen/_4sdp"
            android:id="@+id/request_code_status"
            android:textColor="@color/mazarine_blue"
            android:fontFamily="@font/poppins_bold"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center"
            android:layout_weight=".4"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight=".6"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_2sdp">

            <androidx.cardview.widget.CardView
                android:id="@+id/status_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_8sdp"
                app:cardBackgroundColor="@android:color/holo_red_dark">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_status"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:paddingTop="@dimen/_2sdp"
                    android:paddingBottom="@dimen/_2sdp"
                    android:paddingStart="@dimen/_4sdp"
                    android:textSize="@dimen/_11sdp"
                    android:fontFamily="@font/open_sans_bold"
                    android:paddingEnd="@dimen/_4sdp"
                    android:text=""/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Request Date:"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_weight=".4"
            android:layout_gravity="center"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:layout_marginStart="@dimen/_4sdp"
            android:id="@+id/request_date_status"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_semibold"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Request Type:"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_weight=".4"
            android:layout_gravity="center"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:layout_marginStart="@dimen/_4sdp"
            android:id="@+id/request_type_status"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Update Date:"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_weight=".4"
            android:layout_gravity="center"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:layout_marginStart="@dimen/_4sdp"
            android:id="@+id/request_update_date_status"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_semibold"
            android:paddingEnd="@dimen/_2sdp"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Arrival Time:"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_weight=".4"
            android:layout_gravity="center"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:layout_marginStart="@dimen/_4sdp"
            android:id="@+id/arrival_time_status"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Departure Time:"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_weight=".4"
            android:layout_gravity="center"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:layout_marginStart="@dimen/_4sdp"
            android:id="@+id/departure_time_status"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/approver_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:visibility="gone"
        android:weightSum="1">

        <TextView
            android:id="@+id/text_app_rej"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Approved by:"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="@dimen/_11sdp"
            android:layout_weight=".4"
            android:layout_gravity="center"
            android:textColor="@color/default_text_color"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:layout_marginStart="@dimen/_4sdp"
            android:id="@+id/approver_name_by"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_semibold"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:text=""/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_2sdp"
        android:weightSum="1">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight=".4"
            android:textSize="@dimen/_11sdp"
            android:fontFamily="@font/poppins_semibold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:layout_marginStart="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:id="@+id/button_status_all"
            android:textColor="@color/white"
            android:fontFamily="@font/lato_bold"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:paddingStart="@dimen/_2sdp"
            android:paddingEnd="@dimen/_2sdp"
            android:textSize="@dimen/_9sdp"
            android:text="View Details"
            app:icon="@drawable/double_arrow_24"
            app:cornerRadius="@dimen/_8sdp"
            app:iconGravity="textEnd"
            tools:ignore="HardcodedText" />


    </LinearLayout>


</LinearLayout>